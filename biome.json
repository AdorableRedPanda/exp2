{
	"files": {
		"includes": ["**", "!.next", "!node_modules", "!src/shadcn"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noUnknownAtRules": "off"
			},
			"style": {
				"noEnum": "error"
			},
			"complexity": {
				"noForEach": "off"
			},
			"correctness": {
				"noUnusedImports": "error",
				"useExhaustiveDependencies": "off"
			}
		}
	}
}
